@using eBuy_elctronics_DB
@{
    ViewBag.Title = "eBuy Home";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="container">

                <div class="row">

                    <div class="col-lg-12">
                        <h1 class="page-header">Welcome
                    <small><font color="red">@*<%= request.getParameter("msg") %>*@</font>, eBuy electronics
                    </small>
                        </h1>
                    </div>

                </div>

                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#mycarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#mycarousel" data-slide-to="1"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">

                        @{IList<cGet_Items> _Lastestitems = ViewBag.Items as IList<cGet_Items>;
                          int active = 1;
                          foreach (var item in _Lastestitems)
                          {
                              if (active == 1)
                              {
                                  active = 0;
                            <div class="item active">
                                <img src="@Url.Content("~/Images/Items/" + item.ImageURL)" style="width:300px; height:200px;" alt="Image">
                                <div class="carousel-caption">
                                    <h3 class="text-danger">Sell $@item.Price</h3>
                                    <p class="text-info">@item.ItemDesc</p>
                                </div>
                            </div>
                              }
                              else
                              {
                                  active = 1;
                            <div class="item">
                                <img src="@Url.Content("~/Images/Items/" + item.ImageURL)" style="width:300px; height:200px;"  alt="Image">
                                <div class="carousel-caption">
                                    <h3 class="text-danger">Sell $@item.Price</h3>
                                    <p class="text-info">@item.ItemDesc</p>
                                </div>
                            </div>}
                          }}

                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

                <div class="container text-center">
                    <h3>Latest Brands</h3>
                    <br>
                    @{IList<Brand> _LatetBrands = ViewBag.Brands as IList<Brand>;

                      foreach (var item in _LatetBrands)
                      {
                          if (item.BrandImgUrl == null || item.BrandImgUrl == "")
                          {
                              item.BrandImgUrl = "no_image.jpg";
                          }
                        <div class="col-sm-4">
                           <a href="@Url.Action("BrandItems", "Brands", new { Id = item.BrandID })"> <img src="@Url.Content("~/Images/BrandLogos/" + item.BrandImgUrl)" class="img-responsive" style="width: 200px;height:100px;" alt="Image">
                            <p class="text-center" >@item.BrandName</p></a>
                        </div>
                      }}

                   

                </div>
                <br>

                  <div class="container text-center">
                    <h3>Latest Categories</h3>
                    <br>
                    @{IList<Category> _LatetCategories = ViewBag.category as IList<Category>;

                      foreach (var item in _LatetCategories)
                      {
                          if (item.CategoryImgUrl == null || item.CategoryImgUrl == "")
                          {
                              item.CategoryImgUrl = "no_image.jpg";
                          }
                        <div class="col-sm-4">
                           <a href="@Url.Action("CategoriesItems", "Categories", new { id = item.CategoryID })"> <img src="@Url.Content("~/Images/CategoryLogos/" + item.CategoryImgUrl)" class="img-responsive" style="width: 150px;height:80px;" alt="Image">
                            <p class="text-center" >@item.CategoryName</p></a>
                        </div>
                      }}

                   

                </div>
                <br>
            </div>
        </div>
    </div>
</div>
 <!-- Core Scripts - Include with every page -->
    <script src="@Url.Content("~/Content/bootstrap/js/jquery-1.10.2.js")"></script>