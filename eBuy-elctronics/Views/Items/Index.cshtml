@model IEnumerable<eBuy_elctronics_DB.cGet_Items>
@{
    ViewBag.Title = "eBuy Display";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    int Counter = 0;
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            <small>eBuy electronics</small>
                        </h1>
                    </div>
                </div>
                @foreach (var item in Model)
                {
                    Counter += 1;
                    if (Counter != 4)
                    {
                        if (Counter == 1)
                        {@Html.Raw("<div class='row'>")}
                    <div class="col-md-4 portfolio-item">
                        <a href="@Url.Action("Display", "Items", new { id = item.ItemID })">
                            <label>@item.ItemName</label>
                            <img class="img-responsive" src="@Url.Content("~/images/Items/" + item.ImageURL)" style="width:200px; height:200px;">
                            <label>@item.ItemDesc</label><br />
                            Price: <b>@item.Price</b>
                        </a>
                    </div>
                        if (Counter == 3)
                        {@Html.Raw("</div>")}
                    }
                    else
                    {
                        Counter = 0;
                    <br />
                    }
                }
            </div>
        </div>
    </div>
</div>
 <!-- Core Scripts - Include with every page -->
    <script src="@Url.Content("~/Content/bootstrap/js/jquery-1.10.2.js")"></script>