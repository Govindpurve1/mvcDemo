@model IEnumerable<eBuy_elctronics_DB.Category>
@{
    
    ViewBag.title = "eBuy Categories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Categories List</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    @Html.ActionLink("Add Categories", "Create", "cmsCategories")
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Category Name</th>
                                    <th>Category Description</th>
                                    <th>CreatedBy</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    string _class = string.Empty;
                                    int _cout = 0;
                                    if (Model != null)
                                    {
                                        foreach (var item in Model)
                                        {
                                            if (_cout == 0)
                                            {
                                                _cout = 1;
                                                _class = "odd gradeA";
                                            }
                                            if (_cout == 1)
                                            {
                                                _cout = 0;
                                                _class = "even gradeA";
                                            }                                      
                                       
                                    <tr class="@_class">
                                        <td>@item.CategoryName</td>
                                        <td>@item.CategoryDesc</td>
                                        <td>@item.CreatedBy</td>
                                        <td><a href="@Url.Action("Edit", "cmsCategories", new { id = item.CategoryID })" class="glyphicon glyphicon-edit"></a></td>
                                        <td><a href="@Url.Action("Delete", "cmsCategories", new { id = item.CategoryID })" class="glyphicon glyphicon-trash"></a></td>

                                    </tr>
                                        }
                                    }
                                   
                                
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
<script src="@Url.Content("~/Content/bootstrap/js/jquery-1.10.2.js")"></script>



