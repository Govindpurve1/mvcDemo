@model eBuy_elctronics_DB.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Edit-Categorie</h1>
            <h6>@ViewBag.sucMsg</h6>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    @Html.ActionLink("Back to Categories", "Index", "cmsCategories")
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">

                            @using (Html.BeginForm("Edit", "cmsCategories", FormMethod.Post, new { enctype = "multipart/form-data", id = "CreateCategoryformValidation" }))
                            {
                                @Html.HiddenFor(m => m.CategoryID)
                                <div class="form-group">
                                    <label>Category Name</label>
                                    <input class="form-control" placeholder="Enter category name" type="text" value="@Model.CategoryName" name="CategoryName" />
                                </div>
                                <div class="form-group">
                                    <label>Category Description</label>
                                    <input class="form-control" placeholder="Enter category description" type="text" value="@Model.CategoryDesc" name="CategoryDesc" />
                                </div>
                                <div class="form-group">
                                    <img src="@Url.Content("~/Images/CategoryLogos/"+Model.CategoryImgUrl)" width="430px;" height="200px;" class="ima" />
                                    </div>
                                <div class="form-group">
                                    <label>Upload Category Logo</label>
                                    <input class="form-control" type="file" name="file">
                                </div>
                                <div class="form-group">
                                    <input name="Input" type="submit" value="Submit" class="btn btn-success" />
                                    <input name="Input" type="reset" value="Reset" class="btn btn-default" />
                                </div>

                            }
                        </div>
                    </div>
                </div>

                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery-1.7.1.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.js")"></script>
<script src="@Url.Content("~/Scripts/jquery-form-validation-V.1.js")"></script>