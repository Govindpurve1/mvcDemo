@model IEnumerable<eBuy_elctronics_DB.Query>
@{
    ViewBag.Title = "eBuy Queries";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Customer Queries List</h1>
            <h5>@ViewBag.sucMsg</h5>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                  these are the available Queries at eBuy
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>Query Description</th>
                                    <th>Created Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    string _class = string.Empty;
                                    int _cout = 0;
                                    int _couter = 0;
                                    if (Model != null)
                                    {
                                        foreach (var item in Model)
                                        {
                                            _couter += 1;

                                            if (_cout == 0)
                                            {
                                                _cout = 1;
                                                _class = "odd gradeA";
                                            }
                                            if (_cout == 1)
                                            {
                                                _cout = 0;
                                                _class = "even gradeA";
                                            }
                                       
                                       
                                    <tr class="@_class">
                                        <td>@_couter</td>
                                        <td>@item.Description</td>
                                        <td>@item.QueryDate</td>
                                        <td><a href="@Url.Action("Replay", "cmsQueries", new { Id = item.QueryID })" class="btn btn-success">Replay</a></td>
                                        

                                    </tr>
                                        }
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>

<script src="@Url.Content("~/Content/bootstrap/js/jquery-1.10.2.js")"></script>