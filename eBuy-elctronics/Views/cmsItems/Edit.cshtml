@model eBuy_elctronics_DB.cGet_Items
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Edit-Category</h1>
            <span>@ViewBag.sucMsg</span>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    @Html.ActionLink("Back to Items", "Index", "cmsItems")
                </div>
                <div class="panel-body">
                    <div class="row">
                        
                        <div class="col-lg-6">
                            
                            @using (Html.BeginForm("Edit", "cmsItems", FormMethod.Post, new { enctype = "multipart/form-data", id = "CreateItemsformValidation" }))
                            {
                                @Html.Hidden("ItemID",Model.ItemID)
                                <div class="form-group">
                                    <label>Item Brand</label>
                                    <input type="hidden" value="@Model.BrandID" id="Brand_Id" />
                                    @Html.DropDownList("BrandId", @ViewBag.BrandId as SelectList,"--Select Brand--", new {@class="form-control" })
                                </div>
                                <div class="form-group">
                                    <label>Item Category</label>
                                    <input type="hidden" value="@Model.CategoryID" id="Category_Id" />
                                     @Html.DropDownList("CategoryId", @ViewBag.CategoryId as SelectList,"--Select Category--", new {@class="form-control" })
                                </div>
                                <div class="form-group">
                                    <label>Item Name</label>
                                    <input class="form-control" placeholder="Enter item name" value="@Model.ItemName" type="text" name="ItemName" />
                                </div>
                                <div class="form-group">
                                    <label>Item Description</label>
                                    <input class="form-control" placeholder="Enter item description" value="@Model.ItemDesc" type="text" name="ItemDesc" />
                                </div>
                                 <div class="form-group">
                                    <img src="@Url.Content("~/Images/Items/"+Model.ImageURL)" width="80px" height="100px;"/>
                                    </div>
                                <div class="form-group">
                                    <label>Upload Image</label>
                                    <input type="file" name="file" id="" value="">
                                    @Html.Hidden("ImageURL",Model.ImageURL)
                                </div>
                                
                                <div class="form-group">
                                    <label>Item Quantity</label>
                                    <input class="form-control" placeholder="Enter item quantity" type="text" value="@Model.Quantity" name="Quantity" />
                                </div>
                               
                                
                                <div class="form-group">
                                    <label>Item Price</label>
                                    <input class="form-control" placeholder="Enter item price" type="text" value="@Model.Price" name="Price" />
                                </div>
                                <div class="form-group">
                                    <input name="Input" type="submit" value="Submit" class="btn btn-success" />
                                    <input name="Input" type="reset" value="Reset" class="btn btn-default" />
                                </div>

                            }
                        </div>
                    </div>
                </div>

                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery-1.7.1.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.js")"></script>
<script src="@Url.Content("~/Scripts/jquery-form-validation-V.1.js")"></script>
<script>
    $(document).ready(function () {
        $("#BrandId").val($("#Brand_Id").val())
        $("#CategoryId").val($("#Category_Id").val())
    })
</script>