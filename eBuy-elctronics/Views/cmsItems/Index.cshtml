@model IEnumerable<eBuy_elctronics_DB.cGet_Items>
@{
    ViewBag.Title = "Items";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Items List</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    @Html.ActionLink("Add Items","Create","cmsItems")
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Category Name</th>
                                    <th>Item Name</th>
                                    <th>Item Description</th>
                                    <th>Item Img</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                 @{
                                    string _class = string.Empty;
                                    int _cout = 0;
                                    if (Model != null)
                                    {
                                        foreach (var item in Model)
                                        {

                                            if (_cout == 0)
                                            {
                                                _cout = 1;
                                                _class = "odd gradeA";
                                            }
                                            if (_cout == 1)
                                            {
                                                _cout = 0;
                                                _class = "even gradeA";
                                            }
                                       
                                       
                                    <tr class="@_class">
                                        <td>@item.CategoryName</td>
                                        <td>@item.ItemName</td>
                                        <td>@item.ItemDesc</td>
                                        <td><img src="@Url.Content("~/Images/Items/"+item.ImageURL)" class="image" width="100" height="35" /></td>
                                        <td>@item.Price</td>
                                        <td>@item.Quantity</td>
                                        <td><a href="@Url.Action("Edit", "cmsItems", new { id = item.ItemID })" class="glyphicon glyphicon-edit"></a></td>
                                        <td><a href="@Url.Action("Delete", "cmsItems", new { id = item.ItemID })" class="glyphicon glyphicon-trash"></a></td>
                                    </tr>
                                        }
                                    }
                                }
                                
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
<script src="@Url.Content("~/Content/bootstrap/js/jquery-1.10.2.js")"></script>