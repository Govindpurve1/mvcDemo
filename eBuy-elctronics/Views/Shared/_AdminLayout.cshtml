<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.title</title>

    <!-- Core CSS - Include with every page -->
    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/bootstrap/font-awesome/css/font-awesome.css")" rel="stylesheet">

    <!-- Page-Level Plugin CSS - Tables -->
    <link href="@Url.Content("~/Content/bootstrap/css/plugins/dataTables/dataTables.bootstrap.css")" rel="stylesheet">

    <!-- SB Admin CSS - Include with every page -->
    <link href="@Url.Content("~/Content/bootstrap/css/sb-admin.css")" rel="stylesheet">
</head>

<body>

    <div id="wrapper">

        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index", "cmsAdmin")">Admin v1.0</a>
            </div>
            <!-- /.navbar-header -->

            <ul class="nav navbar-top-links navbar-right">
              
                <!-- /.dropdown -->
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i><i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        @*<li><a href="@Url.Action("Index", "MyProfile")"><i class="fa fa-user fa-fw"></i>User Profile</a>
                        </li>*@
                        <li><a href="@Url.Action("Index", "ChangePassword")"><i class="fa fa-gear fa-fw"></i>Change Password</a>
                        </li>
                        <li class="divider"></li>
                        <li><a href="@Url.Action("LogOff", "Login")"><i class="fa fa-sign-out fa-fw"></i>Logout</a>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- /.navbar-top-links -->

        </nav>
        <!-- /.navbar-static-top -->

       
        <nav class="navbar-default navbar-static-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="side-menu">

                    <li>
                        <a href="@Url.Action("Index", "cmsAdmin")"><i class="fa fa-dashboard fa-fw"></i>Dashboard</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-bar-chart-o fa-fw"></i>Products<span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="@Url.Action("Index", "cmsBrands")">Brands</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "cmsCategories")">Category</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "cmsItems")">Items</a>
                            </li>
                        </ul>
                        <!-- /.nav-second-level -->
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-sitemap fa-fw"></i>Inventory<span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="@Url.Action("Index", "cmsInventories")">All Inventories</a>
                            </li>
                        </ul>
                        <!-- /.nav-second-level -->
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-envelope fa-fw"></i>Customer Queries<span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="@Url.Action("Index", "cmsQueries")">Queries</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "cmsFeedBack")">FeedBack</a>
                            </li>                           
                        </ul>
                        <!-- /.nav-second-level -->
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-table fa-fw"></i>Sales<span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="@Url.Action("Index", "cmsOrders")"><i class="fa fa-files-o fa-fw"></i>Orders</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "cmsDateWiseOrders")"><i class="fa fa-files-o fa-fw"></i>Date Wise Orders</a>
                            </li>
                           @* <li>
                                <a href="@Url.Action("Index", "cmsSalesReport")"><i class="fa fa-files-o fa-fw"></i>Sales Report</a>
                            </li>*@
                        </ul>
                        <!-- /.nav-second-level -->
                    </li>

                    </ul>
                    <!-- /#side-menu -->
            </div>

            <!-- /.sidebar-collapse -->
        </nav>
        <!-- /.navbar-static-side -->
        @RenderBody()
    </div>
    <!-- /#page-wrapper -->

    <!-- Core Scripts - Include with every page -->
  @*  <script src="@Url.Content("~/Content/bootstrap/js/jquery-1.10.2.js")"></script>*@
    <script src="@Url.Content("~/Content/bootstrap/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Content/bootstrap/js/plugins/metisMenu/jquery.metisMenu.js")"></script>

    <!-- Page-Level Plugin Scripts - Tables -->
    <script src="@Url.Content("~/Content/bootstrap/js/plugins/dataTables/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/Content/bootstrap/js/plugins/dataTables/dataTables.bootstrap.js")"></script>

    <!-- SB Admin Scripts - Include with every page -->
    <script src="@Url.Content("~/Content/bootstrap/js/sb-admin.js")"></script>

    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
    </script>
    <style>
        form label.error {
        font: 10px Tahoma,sans-serif;
        color: #ED7476;
        margin-left: 5px;
    }

    form input.error, form input.error:hover, form input.error:focus, form select.error,
    form textarea.error {
        border: 1px solid #ED7476;
        background: #FFEDED;
    }
    </style>

</body>
</html>
