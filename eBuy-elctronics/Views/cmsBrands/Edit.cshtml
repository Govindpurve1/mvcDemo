@model eBuy_elctronics_DB.Brand
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Edit-Brand</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    @Html.ActionLink("Back to Brands", "Index", "cmsBrands")
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            @using (Html.BeginForm("Edit", "cmsBrands", FormMethod.Post, new { id = "CreateBrandformValidation", enctype = "multipart/form-data" }))
                            {
                                @Html.HiddenFor(m => m.BrandID)
                                <div class="form-group">
                                    <label>Brand Name</label>
                                    <input class="form-control" placeholder="Brand name" value="@Model.BrandName" name="BrandName">
                                </div>
                                <div class="form-group">
                                    <label>Brand Description</label>
                                    <input class="form-control" placeholder="Brand description" value="@Model.BrandDesc" name="BrandDesc">
                                </div>
                                <div class="form-group">
                                    <img src="@Url.Content("~/Images/BrandLogos/"+Model.BrandImgUrl)" class="ima" />
                                    </div>
                                <div class="form-group">
                                    <label>Upload Brand Logo</label>
                                    <input class="form-control" type="file" name="file">
                                </div>  
                                <button type="submit" class="btn btn-success">Submit</button>
                                <button type="reset" class="btn btn-default">Reset</button>
                            }
                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>

<script src="@Url.Content("~/Scripts/jquery-1.7.1.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.js")"></script>
<script src="@Url.Content("~/Scripts/jquery-form-validation-V.1.js")"></script>